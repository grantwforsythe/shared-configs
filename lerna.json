{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "pnpm",
  "command": {
    "version": {
      "allowBranch": "main",
      "yes": true,
      "conventionalCommits": true,
      "changelog": true,
      "createRelease": "github",
      "message": "chore(release): %v"
    },
    "publish": {
      "yes": true
    }
  }
}
